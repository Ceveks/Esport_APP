<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="none.esportsre.csgoResults">



    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/sortForFav"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort for favorite teams"
            android:textSize="10sp"
            android:layout_alignRight="@+id/ongoingEvents"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="150dp"
            android:paddingStart="150dp"
            android:layout_below="@+id/sortForFav" />

        <TextView
            android:id="@+id/ongoingEventsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Ongoing events" />

        <ListView
            android:id="@+id/upcomingEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/upcomigEventsTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            />

        <ListView
            android:id="@+id/ongoingEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/spinner"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            />

        <TextView
            android:id="@+id/upcomigEventsTextView"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ongoingEvents"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Upcoming events" />

        <TextView
            android:id="@+id/noOngoingFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ongoingEventsTextView"
            android:layout_alignRight="@+id/ongoingEventsTextView"
            android:layout_alignTop="@+id/ongoingEvents"
            android:layout_marginTop="66dp"
            android:text="" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>



