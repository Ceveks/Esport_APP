<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="none.esportsre.main">

    <RelativeLayout
        android:layout_width="404dp"
        android:layout_height="582dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="-4dp">

        <Button
            android:id="@+id/csgoButt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="204dp"
            android:layout_weight="1"
            android:text="Counter-Strike: Global Offensive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/lolButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/csgoButt"
            android:layout_alignStart="@+id/csgoButt"
            android:layout_below="@+id/csgoButt"
            android:layout_marginTop="64dp"
            android:text="League Of Legends"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
