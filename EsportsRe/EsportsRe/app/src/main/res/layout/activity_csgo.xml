<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    tools:context="none.esportsre.csgo">

    <RelativeLayout
        android:id="@+id/RELATIVElayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recentResults"
            android:layout_marginTop="20sp"
            android:paddingLeft="20sp"
            android:paddingStart="20sp"/>

        <ListView
            android:id="@+id/ListerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="30dp"

            android:paddingStart="30dp"
            android:layout_below="@+id/recentResults"
            android:layout_toRightOf="@+id/tex"
            android:layout_toEndOf="@+id/tex" />

        <Button
            android:id="@+id/recentResults"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:text="recent matches" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
