<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/body"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/savedMatches"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:background="#3F51B5"
                    android:text="Saved matches"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/settings"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:background="#3F51B5"
                    android:text="settings"
                    android:textAlignment="center"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1" />

                <AutoCompleteTextView
                    android:id="@+id/Search"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:hint="Team name"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <Button
                    android:id="@+id/dataGetter"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="#3F51B5"
                    android:text="Search"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageButton

                    android:id="@+id/team1"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    />

                <ImageButton
                    android:id="@+id/team2"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageButton
                    android:id="@+id/team3"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_height="120sp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"


                  />


                <ImageButton
                    android:id="@+id/team4"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_height="120sp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"

                 />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/allMatches"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:background="#3F51B5"
                    android:text="All matches"
                    android:textAlignment="center"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/clearMatches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />


    <Button
        android:id="@+id/recentResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <ListView
        android:id="@+id/lister"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/savedList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>